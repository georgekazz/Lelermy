<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/backgroundicon">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="169dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/stickernote_icon"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="176dp"
        android:layout_height="169dp"
        android:src="@drawable/stickernote_icon"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="215dp"/>

    <TextView
        android:id="@+id/Tx"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:rotation="-4"
        android:text="Υπηρετήσημες"
        android:textSize="19dp"
        />

    <TextView
        android:id="@+id/daysLeftTx"
        android:layout_width="216dp"
        android:layout_height="99dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="824dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ipiretisimesTx"
        android:layout_width="109dp"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="55dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="32dp" />

    <ImageView
        android:id="@+id/simboloImg"
        android:layout_width="116dp"
        android:layout_height="79dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="245dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="15dp"
        android:gravity="left|center"
        android:text="Συμβουλές:"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/tipsTx"
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/levelimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

</RelativeLayout>